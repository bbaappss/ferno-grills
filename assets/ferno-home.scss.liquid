  }
}

.video-container {
  position: relative;
  padding-top: 56.25%;
  overflow: hidden;
}

.fluid-width-video-wrapper {
  padding-top: 56.25% !important;
  
}


.video {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}

.video iframe {
  height: 100%;
  width: 100%;
}


.video .overlay {
  background: rgba(0, 0, 0, 0.45);
  left: 0;
  height: 100%;
  position: absolute;
  z-index: 2;
  top: 0;
  width: 100%;
}

@media (max-width: 415px) {
  .video-container {
    min-height: 370px;

    .fluid-width-video-wrapper {
      height: 100%;
      transform: scale(1.75);
    }

  }

}

.video-container a {
  height: 100%;
  position: absolute;
  width: 100%;
  top: 0;
  z-index: 4;
}

.video-container .content-container { 
  left: 0;
  position: absolute;
  z-index: 3;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}

@media (min-width: 1440px) {
  .video-container .content-container {
    top: -8vw;
  } 
}

.video-container span svg {
  margin-right: 20px;
  width: 40px;
}

.video-container span svg path {
  fill: white;
}

#shopify-section-footer {
  margin-top: 0 !important;
}
@media (max-width: 768px) {
  .large-only {
    display: none;
  }
}

.quotes-container-2 {
  background: #F8F7F6;
  display: flex;
  justify-content: center;
  padding: 96px 24px;
}

.quotes-container-2 .quote {
  align-items: center;
  display: flex;
  flex-direction: column;
  position: relative;
  text-align: center;
}

.quotes-container-2 .quote a {
  height: 100%;
  position: absolute;
  width: 100%;
}

.quotes-container-2 p {
  font-size: 24px;
  margin-bottom: 12px;
}

.quote.sbi img {
  max-width: 120px;
}

.quote.forbes img {
  max-width: 96px;
}

.quote.inside-hook img {
