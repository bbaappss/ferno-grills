.ferno-cta-button {
  background: #d58007;
  border-radius: 4px;
  color: white;
  display: inline-block;
  padding: 14px 20px;
  text-align: center;

  &:hover {
    color: white;
  }
}

.triple-heat-control-2 {
  background: #FAF2E6;
  padding: 36px 24px;
}
  
.triple-heat-control-2 h3 {
  text-align: center;
}

.triple-heat-control-2 span {
  display: block;
  font-size: 13px;
  max-width: 100px;
  margin: 0 auto;
}

.triple-heat-content-wrapper {
  display: flex;
  justify-content: space-between;
}

.triple-heat-content-wrapper > div:not(:last-child) {
  margin-right: 12px;
}

.triple-heat-control-2 .icon-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.triple-heat-control-2 p {
  margin-top: 36px;
}
  
@media (min-width: 768px) {
  .triple-heat-control-2 {
    padding: 0 0 12px;
  }

  .triple-heat-control-2 .content-container {
    padding: 48px 0px;
    margin: 0 60px;
  }

  .triple-heat-control-2 span {
    font-size: 13px;
    max-width: 150px;
  }
  
  .triple-heat-control-2 p {
    margin-top: 56px !important;
  }
}
  
@media (min-width: 1024px) {
  .triple-heat-control-2 {
    display: flex;
    justify-content: center;

    .content-container {
      margin: 0 60px;
      max-width: 1320px;
      padding-top: 84px;
      max-width: 1200px;
      padding-top: 84px;
    }
    span {
      font-size: 18px;
      max-width: 260px;
    }
  }
}

@media (min-width: 1224px) {
  .triple-heat-control-2 .content-container {
    margin: 0 100px;
  }
}

