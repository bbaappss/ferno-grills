p {
  color: #757575;
}

h3 {
  line-height: 1.4 !important;
}

.ferno-cta-button {
  background: #d58007;
  border-radius: 4px;
  color: white;
  display: inline-block;
  padding: 14px 20px;
  text-align: center;

  &:hover {
    background: #424242;
  }
}

.triple-heat-control-2 {
  background: #FAF2E6;
  padding: 36px 24px;
}
  
.triple-heat-control-2 h3 {
  text-align: center;
}

.triple-heat-control-2 span {
  display: block;
  font-size: 13px;
  max-width: 100px;
  margin: 0 auto;
}

.triple-heat-content-wrapper {
  display: flex;
  justify-content: space-between;
}

.triple-heat-content-wrapper > div:not(:last-child) {
  margin-right: 12px;
}

.triple-heat-control-2 .icon-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.triple-heat-control-2 p {
  margin-top: 36px;
  font-size: 20px !important;
}
  
@media (min-width: 768px) {
  .triple-heat-control-2 {
    padding: 0 0 12px;
  }

  .triple-heat-control-2 .content-container {
    padding: 48px 0px;
    margin: 0 60px;
  }

  .triple-heat-control-2 span {
    font-size: 13px;
    max-width: 150px;
  }
  
  .triple-heat-control-2 p {
    margin-top: 56px !important;
  }
}
  
@media (min-width: 1024px) {
  .triple-heat-control-2 {
    display: flex;
    justify-content: center;
  }

  .triple-heat-control-2 .content-container {
    margin: 0 60px;
    max-width: 1320px;
    padding-top: 84px;
    max-width: 1200px;
    padding-top: 84px;
  }

  .triple-heat-control-2 span {
    font-size: 18px;
    max-width: 260px;
  }
  h3 {
    font-size: 38px !important;
    margin-bottom: 24px !important;
  }
}
@media (min-width: 1224px) {
  .triple-heat-control-2 .content-container {
    margin: 0 100px;
  }
}

@media (max-width: 768px) {
  .image-accent {
    display: none;
  }
}

.image-accent {
  background: #d58007;
  top: -12px;
  right: -12px;
  position: absolute;
  width: 140px;
  height: 100px;
  z-index: 0;

  &.left {
    left: -12px;
    right: inherit;
    height: 140px;
    width: 120px;
  }

}

.image-container { 
  position: relative;
}

.image-container img {
  position: relative;
  z-index: 1;
}

.section-common-columns {
  margin: 36px auto 0;
  position: relative;

  .copy {
    padding: 0 24px;
  }

  .ferno-cta-button {
    margin-bottom: 30px;
  }

}

@media (min-width: 768px) {
  .section-common-columns .copy {
    padding: 0 60px;
  }
}

@media (min-width: 1024px) {
  .section-common-columns {
    align-items: center;
    display: flex;
    margin: 0 60px;
    padding-top: 100px;
    padding-bottom: 100px;
    max-width: 1200px;

    &.reverse .copy {
      order: 2;
      padding: 0 0 0 64px;
    }

    &.reverse .image-container {
      order: 1;
    }


    .copy {
      padding: 0 64px 0 0;
      min-width: 500px;
      width: 500px;
    }

    h3 {
      font-size: 38px !important;
    }
  }
}

@media (min-width: 1224px) {
  .section-common-columns {
    margin: 0 100px;
  }
}

@media (min-width: 1400px) {
  .section-common-columns {
    margin: 0 auto;
  }
}

.flare-ups {
  background: #FCF7F0;
  margin: 0 !important;
  padding-top: 36px !important;

  h3, p {
    padding-left: 24px !important;
    padding-right: 24px;
  } 

  strong {
    color: #d58007;
  }
}

@media (min-width:768px) {
  .flare-ups {
    padding-left: 60px;
    padding-right: 60px;

    h3, p {
      padding-left: 0 !important;
      padding-right: 0;
    } 
  }
}

@media (min-width: 1024px) {
  .flare-ups {
    padding-left: 0;
    padding-right: 0;
  }
  .flare-ups .shg-box-content {
    margin: 0 60px !important;
    max-width: 1200px;
  }
}

@media (min-width: 1224px) {
  .flare-ups .shg-box-content {
    margin: 0 100px !important;
  }
}

@media (min-width: 1400px) {
  .flare-ups .shg-box-content {
    margin: 0 auto !important;
  }
}

.video-container {
  position: relative;
  padding-top: 56.25%;
  overflow: hidden;
}

@media (max-width: 767px) {
  .video-container {
    min-height: 400px;  
  }
  
  .fluid-width-video-wrapper {
    transform: scale(3);
  }
}

.fluid-width-video-wrapper {
  padding-top: 56.25% !important;
  
}


.video {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}

.video iframe {
  height: 100%;
  width: 100%;
}


.video .overlay {
position: absolute;
z-index: 2;
left: 0;
top: 0;
width: 100%;
height: 100%;
background: rgba(0, 0, 0, 0.45);
}

.video-container a {
  height: 100%;
  position: absolute;
  width: 100%;
  top: 0;
  z-index: 4;
}

.video-container .content-container { 
  left: 0;
  position: absolute;
  z-index: 3;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}

.video-container .content-container > span { 
    margin: 0 auto;
    max-width: 600px;
    margin-bottom: 0px;
}

.video-container .content-container span.heading { 
    color: white;
    font-size: 25px;
    font-weight: 800;
    margin-bottom: 8px;
}

.video-container .content-container span.subheading { 
  color: white;
  font-size: 18px;
  font-weight: 100;
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.video-container .content-container span.watch-video {
  font-size: 16px;
  font-weight: 800;
  margin: 0 auto;
}

@media (min-width: 1024px) {

  .video-container .content-container span.heading { 
      font-size: 44px;
  }
  
  .video-container .content-container span.subheading { 
    font-size: 28px;
  }
}

@media (min-width: 1440px) {
  .video-container .content-container {
    top: -8vw;
  } 
}

.video-container span svg {
  margin-right: 20px;
  width: 40px;
}

.video-container span svg path {
  fill: white;
}

#shopify-section-footer {
  margin-top: 0 !important;
}
@media (max-width: 768px) {
  .large-only {
    display: none;
  }
}

.quotes-container-2 {
  background: #F8F7F6;
  display: flex;
  justify-content: center;
  padding: 96px 24px;
}

.quotes-container-2 .quote {
  align-items: center;
  display: flex;
  flex-direction: column;
  position: relative;
  text-align: center;
}

.quotes-container-2 .quote a {
  height: 100%;
  position: absolute;
  width: 100%;
}

.quotes-container-2 p {
  font-size: 16px !important;
  margin-bottom: 12px;
}

.quote.sbi img {
  max-width: 120px;
}

.quote.forbes img {
  max-width: 96px;
}

.quote.inside-hook img {
  max-width: 160px;
}

@media (max-width: 767px) {
  .quotes-inner-container > .quote:first-child,
  .quotes-inner-container > .quote:nth-child(3) {
    display: none;
  }
}

@media (min-width: 768px) {
  .quotes-container-2 {
    padding: 96px 40px;
  }

  .quotes-inner-container {
    display: flex;
    justify-content: space-between;
  }
  
  .quotes-container-2 .quote {
    justify-content: space-around;
    min-width: 246px;
    max-width: 300px;
  }
}

@media (min-width: 1024px) {
  .quotes-container-2 {
    padding-left: 0;
    padding-right: 0;
  }
  .quotes-inner-container {
    margin: 0 60px !important;
    width: 100%;
    max-width: 1200px;
  }
}

@media (min-width: 1224px) {
  .quotes-inner-container {
    margin: 0 100px !important;
  }
}

@media (min-width: 1400px) {
  .quotes-inner-container {
    margin: 0 auto !important;
  }
}
