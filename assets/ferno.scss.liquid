p {
  color: #757575;
}

.triple-heat-control-2 {
  background: #FAF2E6;
  padding: 36px 24px;
}
  
.triple-heat-control-2 h3 {
  text-align: center;
}

.triple-heat-control-2 span {
  display: block;
  font-size: 13px;
  max-width: 100px;
  margin: 0 auto;
}

.triple-heat-content-wrapper {
  display: flex;
  justify-content: space-between;
}

.triple-heat-content-wrapper > div:not(:last-child) {
  margin-right: 12px;
}

.triple-heat-control-2 .icon-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.triple-heat-control-2 p {
  margin-top: 36px;
  font-size: 20px !important;
}
  
@media (min-width: 768px) {
  .triple-heat-control-2 {
    padding: 0 0 12px;
  }

  .triple-heat-control-2 .content-container {
    padding: 48px 0px;
    margin: 0 60px;
  }

  .triple-heat-control-2 span {
    font-size: 13px;
    max-width: 150px;
  }
  
  .triple-heat-control-2 p {
    margin-top: 56px !important;
  }
}
  
@media (min-width: 1024px) {
  .triple-heat-control-2 {
    display: flex;
    justify-content: center;
  }

  .triple-heat-control-2 .content-container {
    margin: 0 60px;
    max-width: 1320px;
    padding-top: 84px;
    max-width: 1200px;
    padding-top: 84px;
  }

  .triple-heat-control-2 span {
    font-size: 18px;
    max-width: 260px;
  }
  h3 {
    font-size: 38px !important;
    margin-bottom: 24px !important;
  }
}

@media screen and (max-width: 1400px) {
  .triple-heat-control-2 .content-container {
    margin: 0 100px;
  }
}

@media (max-width: 768px) {
  .image-accent {
    display: none;
  }
}

.image-accent {
  background: #d58007;
  top: -12px;
  right: -12px;
  position: absolute;
  width: 140px;
  height: 100px;
  z-index: 0;
}

.image-container { 
  position: relative;
}

.image-container img {
  position: relative;
  z-index: 1;
}



.section-ferno-wheel {
  margin: 36px auto 0;
  position: relative;

  .copy {
    padding: 0 24px;
  }
}

@media (min-width: 768px) {
  .section-ferno-wheel .copy {
    padding: 0 60px;
  }
}

@media (min-width: 1024px) {
  .section-ferno-wheel {
    align-items: center;
    display: flex;
    margin: 0 60px !important;
    padding-top: 100px;
    padding-bottom: 100px;
    max-width: 1200px;

    .copy {
      min-width: 500px;
      width: 500px;
    }


    h3 {
      font-size: 38px !important;
    }

    .copy {
      padding: 0 36px 0 0;
    }
  }
}

@media (min-width: 1400px) {
  .section-ferno-wheel {
    margin: 0 100px !important;
  }
}

.flare-ups {
  background: #FDFBF7;
  margin: 0 !important;
  padding-top: 36px !important;

  h3, p {
    padding-left: 24px !important;
    padding-right: 24px;
  } 

  strong {
    color: #d58007;
  }
}

@media (min-width:768px) {
  .flare-ups {
    padding-left: 60px;
    padding-right: 60px;

    h3, p {
      padding-left: 0 !important;
      padding-right: 0;
    } 
  }
}

@media (min-width: 1024px) {
  .flare-ups,
  .flare-ups .steps-columns {
    max-width: 90vw;
    margin: 0 auto;
  }
}

@media (min-width: 768px) {
  .flare-ups {
    max-width: 1200px;
  }
}


@media (min-width: 1400px) {
  .triple-heat-control-2,
  .section-ferno-wheel,
  .flare-ups  {
    margin-left: auto !important;
    margin-right: auto !important;
  }
}

h3 {
  line-height: 1.4 !important;
}


.video-container {
  position: relative;
  padding-top: 56.25%;
  overflow: hidden;
}

@media (max-width: 767px) {
  .video-container {
    min-height: 400px;  
  }
  
  .fluid-width-video-wrapper {
    transform: scale(3);
  }
}

.fluid-width-video-wrapper {
  padding-top: 56.25% !important;
  
}


.video {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}

.video iframe {
  height: 100%;
  width: 100%;
}


.video .overlay {
position: absolute;
z-index: 2;
left: 0;
top: 0;
width: 100%;
height: 100%;
background: rgba(0, 0, 0, 0.45);
}

.video-container a {
  height: 100%;
  position: absolute;
  width: 100%;
  top: 0;
  z-index: 4;
}

.video-container .content-container { 
  left: 0;
  position: absolute;
  z-index: 3;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}

.video-container .content-container > span { 
    margin: 0 auto;
    max-width: 600px;
    margin-bottom: 0px;
}

.video-container .content-container span.heading { 
    color: white;
    font-size: 25px;
    font-weight: 800;
    margin-bottom: 8px;
}

.video-container .content-container span.subheading { 
  color: white;
  font-size: 18px;
  font-weight: 100;
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.video-container .content-container span.watch-video {
  font-size: 16px;
  font-weight: 800;
  margin: 0 auto;
}

@media (min-width: 1024px) {
  .video-container .content-container {
    top: 70px;
  } 
  .video-container .content-container span.heading { 
      font-size: 44px;
  }
  
  .video-container .content-container span.subheading { 
    font-size: 28px;
  }
}

.video-container span svg {
  margin-right: 20px;
  width: 40px;
}

.video-container span svg path {
  fill: white;
}

#shopify-section-footer {
  margin-top: 0 !important;
}
@media (min-width: 768px) {
  .small-only {
    display: none;
  }
}
