p {
  color: #757575;
  font-size: 19px;
}

h3 { 
  font-size: 26px;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 12px;
}

@media (min-width: 1024px) {
  h3 {
    font-size: 38px;
    margin-bottom: 24px;
  }
}

@media (max-width: 768px) {
  .image-accent {
    display: none;
  }
}

.image-accent {
  background: #d58007;
  top: -12px;
  right: -12px;
  position: absolute;
  width: 140px;
  height: 100px;
  z-index: 0;

  &.left {
    left: -12px;
    right: inherit;
    height: 140px;
    width: 120px;
  }

}

.image-container { 
  position: relative;
}

.image-container img {
  position: relative;
  z-index: 1;
}

.section-common-columns {
  margin: 36px auto 0;
  position: relative;

  .copy {
    padding: 0 24px;
  }

  .ferno-cta-button {
    margin-bottom: 30px;
  }

}

.dark-bg {
  background: #010101;
  h3,p {
    color: white !important;
  }
}


@media (min-width: 768px) {
  .section-common-columns .copy {
    padding: 0 60px;
  }
}

@media (min-width: 1024px) {
  .section-common-columns {
    align-items: center;
    display: flex;
    margin: 0 60px;
    padding-top: 100px;
    padding-bottom: 100px;
    max-width: 1200px;

    + .section-common-columns {
      padding-top: 0;
    }

    &.reverse .copy {
      order: 2;
      padding: 0 0 0 64px;
    }

    &.reverse .image-container {
      order: 1;
    }


    .copy {
      padding: 0 64px 0 0;
      min-width: 530px;
      width: 530px;
    }
  }
}

@media (min-width: 1224px) {
  .section-common-columns {
    margin: 0 100px;
  }
}

@media (min-width: 1400px) {
  .section-common-columns {
    margin: 0 auto;
  }
}


.superior-design-2 {
  .section-common-columns {
      margin-top: 0;
      padding-top: 36px;
      padding-bottom: 36px;
  }
}

@media (min-width: 1024px) {
  .superior-design-2 .section-common-columns {
     height: 500px;

     .image-container {
         z-index: 0;
     }
     
     .image-container img {
         left: -60px;
         max-width: 500px;
         transform: scale(1.5);
     }
      
     .copy {
         width: auto;
         z-index: 1;
     }

  }
}

@media (min-width: 1024px) {
  .superior-design-2 .section-common-columns {
     height: 600px;
  }
  .superior-design-2 .section-common-columns.reverse .copy {
      padding: 0 32px 0 64px;
      margin-left: -64px;
  }
}

@media (min-width: 1440px) {
  .superior-design-2 .section-common-columns.reverse .copy {
      padding: 0 0 0 64px;
      margin-left: inherit;
  }
}

.video-container .content-container > span { 
  margin: 0 auto;
  margin-bottom: 0px;
}

.video-container .content-container span.heading { 
  color: white;
  font-size: 26px;
  font-weight: bold;
  margin-bottom: 12px;
}

.video-container .content-container span.subheading { 
  color: white;
  font-size: 18px;
  font-weight: 100;
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

@media (max-width: 374px) {
  .video-container .content-container span.heading { 
    font-size: 22px;
    margin-bottom: 12px;
  }

  .video-container .content-container span.subheading { 
    font-size: 15px;
  }
}

.video-container .content-container span.watch-video {
  font-size: 16px;
  font-weight: 800;
  margin: 0 auto;
}

@media (min-width: 1024px) {

  .video-container .content-container span.heading { 
      font-size: 52px;
      line-height: 1.2;
  }
  
  .video-container .content-container span.subheading { 
    font-size: 28px;
  }
}
