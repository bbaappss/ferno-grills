.video-container {
  position: relative;
  padding-top: 56.25%;
  overflow: hidden;
}

@media (min-width: 768px) {
  .video-container{
    padding-top: 36.25%;
    margin: 0 auto;
  }
}

.fluid-width-video-wrapper {
  padding-top: 56.25% !important;
}


.video {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}

.video iframe {
  height: 100%;
  width: 100%;
}


.video .overlay {
position: absolute;
z-index: 2;
left: 0;
top: 0;
width: 100%;
height: 100%;
background: rgba(0, 0, 0, 0.45);
}

.video-container a {
  height: 100%;
  position: absolute;
  width: 100%;
  top: 0;
  z-index: 4;
}

.video-container .content-container { 
  left: 0;
  position: absolute;
  z-index: 3;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  text-align: center;  
}

.video-container span svg {
  margin-right: 20px;
  width: 40px;
}

.video-container span svg path {
  fill: white;
}

.value-props-with-icons {
  line-height: 19px;
  margin: 40px 0;
  font-size: 15px;
}

.value-props-with-icons img {
  margin-bottom: -20px;
}

.value-props-with-icons > div {
  align-items: center;
  display: flex;
  flex-direction: column;
  font-weight: bold;
  text-align: center;
}

.carousel-cell {
  width: 45%;
  height: 180px;
  margin-right: 10px;
  border-radius: 5px;
  counter-increment: carousel-cell;
}

.carousel-cell:last-of-type {
  margin-right: 0;
}

@media screen and ( min-width: 736px ) {
  /* half-width cells for larger devices */
  .carousel-cell {
    width: 25%;
  }
}

@media (min-width: 1024px) {
  .value-props-with-icons {
    display: flex;
    margin: 100px 60px 0;
  }
}

@media (min-width: 1224px) {
    .value-props-with-icons {
        margin: 100px 100px 0;
    }
}

@media (min-width: 1440px) {
    .value-props-with-icons {
        max-width: 1200px;
        margin: 100px auto 0;
    }
}

/* flickity on by default */
.carousel:after {
  content: 'flickity';
  display: none;
}

@media screen and ( min-width: 1024px ) {
  /* disable Flickity for large devices */
  .carousel:after {
    content: '';
  }
}

